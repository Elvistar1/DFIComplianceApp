<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DFIComplianceApp.Views.UpcomingRenewalsPage"
    Title="📅 Upcoming Renewals"
    BackgroundColor="#f9fafc">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Button style -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#2196F3" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="12,8" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="#33000000" Radius="4" Opacity="0.3" Offset="0,2" />
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Frame style for each renewal item -->
            <Style x:Key="RenewalFrameStyle" TargetType="Frame">
                <Setter Property="CornerRadius" Value="14" />
                <Setter Property="Padding" Value="16" />
                <Setter Property="Margin" Value="8,6" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="BorderColor" Value="#ddd" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="#33000000" Radius="8" Opacity="0.1" Offset="2,4" />
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!-- Main Content -->
        <ScrollView x:Name="MainContent">
            <VerticalStackLayout Padding="16" Spacing="12">

                <!-- Search Bar -->
                <SearchBar
                    x:Name="SearchBar"
                    Placeholder="Search by Name, Occupier, or Location"
                    SearchButtonPressed="OnSearchBarTextChanged"
                    TextChanged="OnSearchBarTextChanged"
                    HeightRequest="44"
                    Margin="0,0,0,8"
                    BackgroundColor="White"
                    FontAttributes="Bold"
                    TextColor="#37474F" />

                <!-- Filter and Sort Row -->
                <HorizontalStackLayout Spacing="12" Margin="0,0,0,8">
                    <Picker
                        x:Name="StatusFilterPicker"
                        Title="Filter by status"
                        SelectedIndexChanged="OnFilterChanged"
                        FontAttributes="Bold"
                        TextColor="#37474F"
                        BackgroundColor="White"
                        HeightRequest="60"
                        WidthRequest="140">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>All</x:String>
                                <x:String>Due Soon</x:String>
                                <x:String>Overdue</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <Picker
                        x:Name="SortPicker"
                        Title="           Sort by"
                        SelectedIndexChanged="OnSortChanged"
                        FontAttributes="Bold"
                        TextColor="#37474F"
                        BackgroundColor="White"
                        HeightRequest="60"
                        WidthRequest="160">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Name ↑</x:String>
                                <x:String>Name ↓</x:String>
                                <x:String>Renewal Date ↑</x:String>
                                <x:String>Renewal Date ↓</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </HorizontalStackLayout>

                <!-- Export Buttons -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="24" Margin="0,0,0,12">
                    <Button Text="📄 Export to PDF" Clicked="OnExportPdfClicked" Style="{StaticResource PrimaryButton}" WidthRequest="140" />
                    <Button Text="📊 Export to Excel" Clicked="OnExportExcelClicked" Style="{StaticResource PrimaryButton}" WidthRequest="140" />
                </HorizontalStackLayout>

                <!-- Renewals CollectionView -->
                <CollectionView
                    x:Name="RenewalsView"
                    SelectionMode="None"
                    BackgroundColor="Transparent"
                    Margin="0,0,0,20"
                    VerticalOptions="FillAndExpand"
                    HeightRequest="500">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Style="{StaticResource RenewalFrameStyle}" BackgroundColor="{Binding RowColor}">
                                <VerticalStackLayout Spacing="8">
                                    <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                                        <Label Text="🏢" FontSize="22" />
                                        <Label Text="{Binding Name}" FontSize="20" FontAttributes="Bold" TextColor="#212121" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="6">
                                        <Label Text="📍" FontSize="16" VerticalOptions="Center" />
                                        <Label Text="{Binding Location}" FontSize="14" TextColor="#455A64" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="6">
                                        <Label Text="⚙️" FontSize="16" VerticalOptions="Center" />
                                        <Label Text="{Binding NatureOfWork}" FontSize="14" TextColor="#607D8B" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="6">
                                        <Label Text="👤" FontSize="16" VerticalOptions="Center" />
                                        <Label Text="{Binding Occupier}" FontSize="14" TextColor="#455A64" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                                        <Label Text="📅" FontSize="16" />
                                        <Label Text="{Binding NextRenewalDate, StringFormat='Next Due: {0:dd MMM yyyy}'}" FontSize="14" FontAttributes="Italic" TextColor="#2E7D32" />
                                    </HorizontalStackLayout>
                                    <Label Text="{Binding RenewalStatus}" FontSize="16" FontAttributes="Bold" TextColor="#D32F2F" HorizontalOptions="Start" />
                                    <Label Text="{Binding DaysRemainingDisplay}" FontSize="13" TextColor="#388E3C" FontAttributes="Italic" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading Indicator overlay -->
        <ActivityIndicator
            x:Name="LoadingIndicator"
            IsRunning="False"
            IsVisible="False"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Color="#2196F3"
            WidthRequest="60"
            HeightRequest="60" />
    </Grid>
</ContentPage>
