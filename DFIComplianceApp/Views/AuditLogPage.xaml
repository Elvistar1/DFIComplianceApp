<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DFIComplianceApp.Views.AuditLogPage"
             Title="Audit Logs"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto, Auto, *">

        <!-- 🔍 Search Bar -->
        <SearchBar x:Name="searchBar"
                   Placeholder="Search by user, role or action..."
                   TextChanged="OnSearchTextChanged"
                   Margin="10"
                   BackgroundColor="White"
                   PlaceholderColor="Gray"
                   TextColor="Black"
                   />

        <!-- Export Buttons -->
        <StackLayout Grid.Row="1"
                     Orientation="Horizontal"
                     HorizontalOptions="Center"
                     Margin="10,0,10,10"
                     Spacing="20">
            <Button Text="Export PDF"
                    Clicked="OnExportToPdfClicked"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,6"/>
            <Button Text="Export Excel"
                    Clicked="OnExportToExcelClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="12,6"/>
        </StackLayout>

        <!-- Refreshable Logs List -->
        <RefreshView x:Name="refreshView"
                     Grid.Row="2"
                     Refreshing="OnRefreshRequested">
            <CollectionView x:Name="auditLogCollectionView"
                            ItemsSource="{x:Reference filteredLogs}"
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand"
                            Margin="10">
                <CollectionView.EmptyView>
                    <StackLayout Padding="20" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label x:Name="emptyLabel"
                               Text="No logs available"
                               FontSize="16"
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="12"
                               Margin="5"
                               BackgroundColor="White"
                               BorderColor="#DADADA"
                               CornerRadius="10"
                               HasShadow="True">
                            <VerticalStackLayout>
                                <Label Text="{Binding Username}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#37474F"/>
                                <Label Text="{Binding Role}"
                                       FontSize="14"
                                       TextColor="#607D8B"/>
                                <Label Text="{Binding Action}"
                                       FontSize="14"
                                       TextColor="#333"/>
                                <Label Text="{Binding Timestamp, StringFormat='🕒 {0:MMM dd, yyyy hh:mm tt}'}"
                                       FontSize="12"
                                       TextColor="Gray"
                                       FontAttributes="Italic"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Loading Overlay -->
        <Grid x:Name="loadingOverlay"
              Grid.RowSpan="3"
              BackgroundColor="#80000000"
              IsVisible="False">
            <ActivityIndicator IsRunning="True"
                               Color="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
        </Grid>

    </Grid>
</ContentPage>
