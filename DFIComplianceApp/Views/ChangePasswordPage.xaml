<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DFIComplianceApp.ViewModels"
             x:Class="DFIComplianceApp.Views.ChangePasswordPage"
             x:DataType="vm:ChangePasswordViewModel"
             Title="Create New Password">

    <VerticalStackLayout Padding="24" Spacing="18">

        <Label Text="Create a new password"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Entry Placeholder="New password"
               IsPassword="True"
               Text="{Binding NewPassword}" />

        <Entry Placeholder="Confirm password"
               IsPassword="True"
               Text="{Binding ConfirmPassword}" />

        <Button Text="Save Password"
                Command="{Binding SaveCommand}" />

    </VerticalStackLayout>
</ContentPage>
