<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DFIComplianceApp.Views.ApiKeySettingsPage"
             Title="OpenAI API Key">

    <VerticalStackLayout Padding="20" Spacing="18">
        <Label Text="Paste your secret OpenAI key below. It will be stored securely on this device."
               LineBreakMode="WordWrap"/>

        <Entry x:Name="KeyEntry"
               Placeholder="skâ€‘..."
               IsPassword="True"
               FontFamily="Courier New"/>

        <HorizontalStackLayout Spacing="12">
            <Button Text="Save"    Clicked="OnSaveClicked" />
            <Button Text="Clear"   Clicked="OnClearClicked" />
        </HorizontalStackLayout>

        <Label x:Name="StatusLabel"
               TextColor="Green"
               IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>
